#!/usr/bin/env bash
set -e

run_black()
{
  printf "\nâ€¢ Run Black code formatting: "
  poetry run black "$@"
  printf "â†³ Black done\n\n"
}

run_ruff()
{
  echo "â€¢ Run Ruff code analysis:"
  poetry run ruff "$@"
  printf "â†³ Ruff done\n\n"
}

run_isort()
{
  echo "â€¢ Run Isort imports formatting:"
  poetry run isort "$@"
  printf "â†³ Isort done\n\n"
}

run_mypy()
{
  echo "â€¢ Run Mypy static type checking:"
  poetry run mypy "$@"
  printf "â†³ Mypy done\n\n"
}

run_lint()
{
  echo "ðŸ§¹ Code lint using multiple tools:"
  run_black --check .
  run_isort --check .
  run_ruff .
  run_mypy .
}

run_lint "$@"