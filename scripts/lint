#!/usr/bin/env bash
set -e

source scripts/black
source scripts/isort
source scripts/ruff
source scripts/mypy

run_lint() {
  echo "ðŸ§¹ Code lint using multiple tools:"
  run_black --check .
  run_isort --check .
  run_ruff .
  run_mypy .
}

if [[ "${#BASH_SOURCE[@]}" -eq 1 ]]; then
  run_lint "$@"
fi
