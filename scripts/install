#!/usr/bin/env bash
set -e

install_pkg() {
  echo "ðŸ”¥ Install python requirements..."
  poetry install --with dev,schemas,ml "$@"
  cd templates
  echo "ðŸ”¥ Install js requirements..."
  npm i
  echo "ðŸ”¥ Build templates..."
  npm run build
  cd ..
}

if [[ "${#BASH_SOURCE[@]}" -eq 1 ]]; then
  install_pkg "$@"
fi
