  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "plugin:@typescript-eslint/recommended",
      "next/core-web-vitals",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true
        }
      ]
    }
  },
  "private": true,
  "scripts": {
    "build": "webpack",
    "dev": "webpack --watch",
    "format": "prettier . --write --ignore-path .gitignore --ignore-unknown"
